@model Student

@{
    Layout = null;
}

<form id="deleteForm" action="@Url.Action("Delete")" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="@Model.Id" id="txtId" name="Id" />

    <div class="form-group">
        <div class="col-md-12 text-right">
            <input asp-for="@Model.FirstName" id="txtFirstName" name="FirstName" type="text" placeholder="نام" class="form-control d-inline" readonly/>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-12 text-right">
            <input asp-for="@Model.LastName" id="txtLastName" name="LastName" type="text" placeholder="نام خانوادگی" class="form-control d-inline" readonly/>
        </div>
    </div>

</form>
