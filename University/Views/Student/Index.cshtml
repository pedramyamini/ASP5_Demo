@model List<Student>
@{
    ViewData["Title"] = "Index";
}

<h3>دانشجویان</h3>

<button onclick="showModal('@Url.Action("Upsert")');" class="btn btn-primary mt-3"> افزودن </button>

@if (Model.Count > 0)
{
    <div id="student-grid">
       @await Html.PartialAsync("_StudentGrid") 
    </div>
}
else
{
    <p class="text-center mt-3"> دانشجویی یافت نشد. </p>
}
