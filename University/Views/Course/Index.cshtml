@using PagedList.Core;
@using PagedList;
@model IPagedList<Course>
@{
    ViewData["Title"] = "دوره‌ها";
}

<h3>دوره‌ها</h3>

<button onclick="showModal('@Url.Action("Upsert")');" class="btn btn-primary mt-3"> افزودن </button>

@if (Model.Count > 0)
{
    <div id="course-grid">
        @await Html.PartialAsync("_CourseGrid")
    </div>
}
else
{
    <p class="text-center mt-3"> دانشجویی یافت نشد. </p>
}
