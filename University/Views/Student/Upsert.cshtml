@model Student
@{
    ViewData["Title"] = "دانشجو";
    Layout = null;
}

<form id="upsertForm" action="@Url.Action("Upsert")" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="@Model.Id" id="txtId" name="Id" />

    <div class="form-group">
        <div class="col-md-12 text-right">
            <input asp-for="@Model.FirstName" id="txtFirstName" name="FirstName" type="text" placeholder="نام" class="form-control d-inline" />
            <span class="text-danger" asp-validation-for="@Model.FirstName"></span>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-12 text-right">
            <input asp-for="@Model.LastName" id="txtLastName" name="LastName" type="text" placeholder="نام خانوادگی" class="form-control d-inline" />
            <span class="text-danger" asp-validation-for="@Model.LastName"></span>
        </div>
    </div>

</form>

@section Scripts
{
    
}